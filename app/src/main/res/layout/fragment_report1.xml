<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RadioGroup
        android:id="@+id/btnContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:weightSum="3">
        
        <RadioButton
            android:checked="true"
            android:id="@+id/btn1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="총 저작횟수"
            android:background="@drawable/report_button"
            android:textColor="@drawable/report_text"
            android:button="@null"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/btn1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="총 식사시간"
            android:background="@drawable/report_button"
            android:textColor="@drawable/report_text"
            android:button="@null"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/btn1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="한 입당 저작횟수"
            android:background="@drawable/report_button"
            android:textColor="@drawable/report_text"
            android:button="@null"
            android:gravity="center"/>
    </RadioGroup>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/reportFrame1"
        app:layout_constraintTop_toBottomOf="@+id/btnContainer1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>

